<div class="page-wrapper">
    <table class="user-wrapper">
        <thead>
            <tr>
                <th>Email</th>
                <th>Admin?</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.admin %></td>
                    <% if @users.count > 1 %>
                        <td><%= link_to 'Remove', user_path(user.id), :method => :delete %></td>
                    <% end %>
                    <% if !user.admin %>
                        <td><%= button_to 'Make admin', is_admin_user_path(user.id), :class => "admin-button" %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>