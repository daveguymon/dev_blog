<div class="page-wrapper">
    <div class="post-wrapper">
        <h1><%= @post.title %></h1>
        <p><%= @post.created_at.strftime("%B, %d, %Y")%></p>
        <p><%= @post.content %></p>
        <%= link_to 'Edit', edit_post_path(@post) %>
        <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
</div>